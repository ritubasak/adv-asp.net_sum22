
@model CRUD.EF.employee

@{
    ViewBag.Title = "Employee";
}


<h2>Addmember</h2>

<style>
    .error {
        color: red;
    }
</style>

@using (Html.BeginForm("Addmember", "Employee", FormMethod.Post))
{
    <div class="container">
        <div class="form-group">
            @Html.HiddenFor(x => x.Id)
            <label>Id</label>
            @Html.ValidationMessageFor(x => x.Id, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.Id, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Name</label>
            @Html.ValidationMessageFor(x => x.Name, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Email</label>
            @Html.ValidationMessageFor(x => x.Email, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Gender</label>
            @Html.ValidationMessageFor(x => x.Gender, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.Gender, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Contact</label>
            @Html.ValidationMessageFor(x => x.Contact, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.Contact, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>

    </div>




}

