@model fundProject.Models.raiser
@{
    ViewBag.Title = "RaiserRegistration";
}

<h2>RaiserRegistration</h2>

<style>
    .text-danger {
        color: red;
    }
</style>




@using (Html.BeginForm("AddRaisers", "URaiser", FormMethod.Post))
{
    <div class="container">

        <div class="form-group">
            <label>Name</label>
            @Html.ValidationMessageFor(x => x.uName, "", new { @class = "text-danger" })
            @Html.TextBoxFor(x => x.uName, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Raise Amount</label>
            @Html.ValidationMessageFor(x => x.uraiseAmount, "", new { @class = "text-danger" })
            @Html.TextBoxFor(x => x.uraiseAmount, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Description</label>

            @Html.ValidationMessageFor(x => x.uDescription, "", new { @class = "text-danger" })
            @Html.TextAreaFor(x => x.uDescription, new { @class = "form-control", @rows = "10" })

        </div>

        <div class="form-group">
            <label>Address</label>
            @Html.ValidationMessageFor(x => x.uAddress, "", new { @class = "text-danger" })
            @Html.TextAreaFor(x => x.uAddress, new { @class = "form-control", @rows = "5" })
        </div>

        <div class="form-group">
            <label>Email</label>
            @Html.ValidationMessageFor(x => x.uEmail, "", new { @class = "text-danger" })
            @Html.TextBoxFor(x => x.uEmail, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Mobile</label>
            @Html.ValidationMessageFor(x => x.uMobile, "", new { @class = "text-danger" })
            @Html.TextBoxFor(x => x.uMobile, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Date</label>
            @Html.ValidationMessageFor(x => x.Date, "", new { @class = "text-danger" })
            @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
        </div>

        <div class="form-horizontal">
            <label>Upload Profile</label>

            <div class="form-group">


                @*@Html.LabelFor(x => x.image, htmlAttributes: new { @class = "control-label col-md-15" })*@
                <div class="col-md-10">
                    @*@Html.EditorFor(x => x.image, new { hrmlAttribute = new {@class = "form-control" }})

                        @Html.ValidationMessageFor(x => x.image, "", new { @class="text-danger" })*@

                    @Html.ValidationMessageFor(x => x.image, "", new { @class = "text-danger" })

                    <input type="file" name="ImageFile" />
                </div>

            </div>

        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>

    </div>
}