@model IEnumerable<fundProject.Models.leave>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.leaveId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.eId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.leaveStatus)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.leaveId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.eId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.leaveStatus)
        </td>
        <td>
            @Html.ActionLink("View", "Edit", new { id=item.leaveId }, new { @class = "btn btn-success" }) @*|
