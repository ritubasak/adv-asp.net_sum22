@model fundProject.Models.users1
@{
    ViewBag.Title = "Login";
    

}
<style>
    .error {
        color: red;
    }
</style>

<h2>Login</h2>

@{ try
    {
        if (TempData["msg"] != null)
        {
            <label style="color:red">@TempData["msg"]</label>

        }

    }

    catch
    {

    }


}



@using (Html.BeginForm(FormMethod.Post))
{
    <div class="container">

        <div class="form-group">
            <label>User Name</label>
            @Html.ValidationMessageFor(x => x.uUserName, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.uUserName, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Password</label>
            @Html.ValidationMessageFor(x => x.uPassword, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.uPassword, new { @class = "form-control" })
        </div>

        <div class="form-group">

            <div class="col-md-offset-2 col-md-10">

                <input type="submit" value="Login" class="btn btn-default" />


            </div>

        </div>

    </div>

}