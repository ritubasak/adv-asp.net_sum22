@model fundProject.Models.users2
    @{
    ViewBag.Title = "Login";
}
<br />
<div class="jumbotron">
    <div class="row">
        <div class="col-md-3 col-md-offset-5">
            <div>
                @using (Html.BeginForm("Login", "Donor", FormMethod.Post))
                {
                    <table height="200">
                        <tr>
                            <th colspan="2" class="text-center" style="font-size:25px;">
                                Login
                            </th>
                        </tr>
                        <tr>
                            <td>
                                @Html.LabelFor(x => x.dnUserName)
                            </td>
                            <td>
                                @Html.TextBoxFor(x => x.dnUserName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.dnUserName, "", new { @class = "error" })

                            </td>
                        </tr>

                        <tr>
                            <td>
                                @Html.LabelFor(x => x.dnPassword)
                            </td>
                            <td>
                                @Html.EditorFor(x => x.dnPassword, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(x => x.dnPassword, "", new { @class = "error" })
                                @ViewBag.ErrorMessage
                            </td>
                        </tr>
                        <tr>
                            <td></td>
                            <td>
                                <input type="submit" value="Login" name="login" class="btn btn-primary" />

                            </td>
                        </tr>
                    </table>
                }
            </div>

        </div>

    </div>

</div>
